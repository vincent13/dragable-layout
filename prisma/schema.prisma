generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Layout {
  id        String   @id @default(cuid())
  lg        Json
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  themeId String?  // optional so old layouts donâ€™t break
  theme   Theme?   @relation(fields: [themeId], references: [id], onDelete: SetNull)
  screens Screens[]
}

model Screens {
  screenId  Int      @id
  name      String
  layoutId  String?
  layout    Layout?  @relation(fields: [layoutId], references: [id], onDelete: SetNull)
  updatedAt DateTime @updatedAt

  @@index([layoutId])
}

model Theme {
  id         String   @id @default(cuid())
  name       String
  background String?
  fontFamily String?
  fontSize   String?
  textColor  String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  layouts Layout[]  // One-to-many: a theme can be used by multiple layouts
}
